<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Adress</th>
      <th>City</th>
      <th>Country</th>
      <th>User</th>
      <th>Image</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.body %></td>
        <td><%= news.adress %></td>
        <td><%= news.city %></td>
        <td><%= news.country %></td>
        <td><%= news.user %></td>
        <td><%= news.image %></td>
        <td><%= news.latitude %></td>
        <td><%= news.longitude %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

