<div class="row">
  <div class="col s12">
    <div class="card-panel">

<h2>Mes évènements</h2>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Localisation</th>
      <th>Ville</th>
	  <th>Pays</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.adress %></td>
        <td><%= event.city %></td>
		<td><%= event.country %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvel évènement', new_event_path %>

</div>
</div>
</div>

<div class="row">
  <div class="col s12">
    <div class="card-panel">

<h2>Mes actualités</h2>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Contenu</th>
      <th>Localisation</th>
      <th>Ville</th>
      <th>Pays</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.body %></td>
        <td><%= news.adress %></td>
        <td><%= news.city %></td>
        <td><%= news.country %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle actualité', new_news_path %>

</div>
</div>
</div>
